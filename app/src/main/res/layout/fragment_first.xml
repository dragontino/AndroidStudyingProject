<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SecondFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="16dp"
        android:text="@string/first_fragment_title"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />


    <ru.dragontino.androidtestproject.ui.FillingByClickRectangle
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@id/material_split_button"
        />


    <com.google.android.material.button.MaterialSplitButton
        android:id="@+id/material_split_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dp"
        app:innerCornerSize="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangle"
        app:shapeAppearance="@style/SplitButtonStyle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_previous_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="@string/go_back"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_next_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="@string/go_further"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:rippleColor="@android:color/holo_green_dark" />
    </com.google.android.material.button.MaterialSplitButton>

</androidx.constraintlayout.widget.ConstraintLayout>